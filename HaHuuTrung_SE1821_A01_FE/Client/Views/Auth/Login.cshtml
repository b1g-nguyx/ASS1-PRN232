@model Client.Models.DTOs.LoginDTO

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="AccountEmail">Email</label>
        <input asp-for="AccountEmail" class="form-control" />
        <span asp-validation-for="AccountEmail" class="text-danger" />
    </div>

    <div class="form-group">
        <label asp-for="AccountPassword">Password</label>
        <input asp-for="AccountPassword" class="form-control" type="password" />
        <span asp-validation-for="AccountPassword" class="text-danger" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-2">@ViewBag.Error</div>
    }
</form>

<p>
    Don't have an account? <a asp-controller="Auth" asp-action="Register">Register here</a>
</p>
