<!-- AdminDashboard.cshtml -->
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="text-2xl font-bold mb-4">Admin Dashboard</h2>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Account Management -->
    <div class="bg-white shadow rounded-2xl p-4">
        <h3 class="text-xl font-semibold mb-2">Account Management</h3>
        <a href="/Account" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Manage Accounts</a>
    </div>

    <!-- Report Statistics -->
    <div class="bg-white shadow rounded-2xl p-4">
        <h3 class="text-xl font-semibold mb-2">Generate Report</h3>
        <form asp-action="GenerateReport" method="post" class="space-y-2">
            <input type="date" name="StartDate" class="border rounded p-2 w-full" required />
            <input type="date" name="EndDate" class="border rounded p-2 w-full" required />
            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded">Generate</button>
        </form>
    </div>
</div>

